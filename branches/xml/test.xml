<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE circuit SYSTEM "circuit.dtd">
<circuit ver="1.0">

<component><!-- kapcsolo -->
 <id>0</id>
 <type>switch</type>
 <value>0</value>
</component>

<component><!-- inverter -->
 <id>1</id>
 <type>inverter</type>
</component>

<component><!-- kijelzo -->
 <id>2</id>
 <type>display</type>
</component>

<component><!-- vezetek kapcsolo kimenete es inverter bemenete kozott -->
 <id>3</id>
 <type>wire</type>
 <connections>
  <in>
   <id>0</id>
   <pin>0</pin>
  </in>
  <out>
   <id>1</id>
   <pin>0</pin>
  </out>
 </connections>
</component>

<component><!-- vezetek inverter kimenete es kijelzo bemenete kozott -->
 <id>4</id>
 <type>wire</type>
 <connections>
  <in>
   <id>1</id>
   <pin>1</pin>
  </in>
  <out>
   <id>2</id>
   <pin>0</pin>
  </out>
 </connections>
</component>

</circuit>